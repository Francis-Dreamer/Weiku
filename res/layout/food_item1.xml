<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/food_item1_iamge"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px180"
        android:layout_marginRight="@dimen/px40"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/item1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingRight="@dimen/px20"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/food_item1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="我是标题"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px30" />
        <TextView
            android:id="@+id/food_item1_cailiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/px10"
            android:layout_marginTop="@dimen/px10"
            android:text="我是材料"
            android:textColor="#5e5e5e"
            android:ellipsize="end"
            android:textSize="@dimen/px22" />
        <TextView
            android:id="@+id/food_item1_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/like1"
            android:drawablePadding="@dimen/px8"
            android:text="123"
            android:textColor="#5e5e5e"
            android:textSize="@dimen/px22" />
    </LinearLayout>

</LinearLayout>