<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/food_item2_iamge"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px180"
        android:layout_marginRight="@dimen/px40"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/item1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/px20" >

        <TextView
            android:id="@+id/food_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="我是标题"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/food_item2_tiezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="美食帖11"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/px22" />

            <TextView
                android:id="@+id/food_item2_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:singleLine="true"
                android:text="收藏11"
                android:textColor="#5e5e5e"
                android:textSize="@dimen/px22" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/food_item2_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/px20"
        android:padding="@dimen/px8"
        android:background="@drawable/shape_food_attention"
        android:text="关注"
        android:clickable="true"
        android:textColor="#fe4652"
        android:textSize="@dimen/px24" />

</LinearLayout>