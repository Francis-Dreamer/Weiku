<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/food_icon" />

    <RadioGroup
        android:id="@+id/food_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/food_rbtn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/selector_food_line"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/px10"
            android:text="美食秀"
            android:textSize="@dimen/px30"
            android:textColor="#040404" />

        <RadioButton
            android:id="@+id/food_rbtn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_food_line"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/px10"
            android:text="美食达人"
            android:textSize="@dimen/px30"
            android:textColor="#040404" />
    </RadioGroup>

    <ListView
        android:id="@+id/food_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/px10"
        android:layout_weight="1"
        android:scrollbars="@null"
        android:divider="#F2F2F2"
        android:dividerHeight="@dimen/px10" />

</LinearLayout>