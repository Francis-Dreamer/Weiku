<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px400" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/home_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px400"
                    android:background="@android:color/black" />

                <RadioGroup
                    android:id="@+id/home_pager_rgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/px10"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rbtn_1"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px30"
                        android:button="@drawable/selector_viewpager" />

                    <RadioButton
                        android:id="@+id/rbtn_2"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px30"
                        android:button="@drawable/selector_viewpager" />

                    <RadioButton
                        android:id="@+id/rbtn_3"
                        android:layout_width="@dimen/px30"
                        android:layout_height="@dimen/px30"
                        android:button="@drawable/selector_viewpager"/>
                </RadioGroup>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FE4652"
                android:gravity="center"
                android:padding="@dimen/px20"
                android:text="精品推荐"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px30" />

            <GridView
                android:id="@+id/home_gridview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:horizontalSpacing="@dimen/px10"
                android:numColumns="2"
                android:padding="@dimen/px10"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/px10" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>