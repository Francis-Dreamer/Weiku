<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px100"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:text="账号:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px30" />

        <EditText
            android:id="@+id/register_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/px20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px1"
        android:layout_marginTop="@dimen/px1"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:text="验证:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px30" />

        <EditText
            android:id="@+id/register_checknum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/register_getCheckNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/shape_register"
            android:paddingBottom="@dimen/px8"
            android:paddingLeft="@dimen/px16"
            android:paddingRight="@dimen/px16"
            android:paddingTop="@dimen/px8"
            android:text="获取验证码"
            android:textColor="#fe4652"
            android:textSize="@dimen/px20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:text="密码:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px30" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:password="true"
            android:hint="请输入您的密码"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/px24" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/register_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px25"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px25"
        android:button="@drawable/selector_checkbox"
        android:paddingLeft="@dimen/px20"
        android:text="我已认真阅读并同意该用户协议。"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px23" />

    <TextView
        android:id="@+id/register_register"
        android:layout_width="@dimen/px400"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_login_button"
        android:gravity="center"
        android:paddingBottom="@dimen/px20"
        android:paddingTop="@dimen/px20"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px24" />

</LinearLayout>