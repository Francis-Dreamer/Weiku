<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px10"
        android:paddingBottom="@dimen/px10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="石锅拌饭"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px25" />
        <TextView
            android:id="@+id/home_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:drawableLeft="@drawable/like1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px21" />
    </LinearLayout>

</LinearLayout>