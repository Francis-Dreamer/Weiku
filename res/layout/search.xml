<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <include layout="@layout/top_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px1"
        android:background="#FE4652"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/search_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px5"
            android:paddingTop="@dimen/px5" >

            <RadioButton
                android:id="@+id/search_rbtn_all"
                android:layout_width="@dimen/px80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:button="@null"
                android:drawableBottom="@drawable/selector_search_line"
                android:drawablePadding="@dimen/px6"
                android:gravity="center_horizontal"
                android:text="综合"
                android:textColor="#ffffff"
                android:textSize="@dimen/px22" />

            <RadioButton
                android:id="@+id/search_rbtn_renqi"
                android:layout_width="@dimen/px80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:button="@null"
                android:drawableBottom="@drawable/selector_search_line"
                android:drawablePadding="@dimen/px6"
                android:gravity="center_horizontal"
                android:text="人气"
                android:textColor="#ffffff"
                android:textSize="@dimen/px22" />

            <RadioButton
                android:id="@+id/search_rbtn_new"
                android:layout_width="@dimen/px80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:button="@null"
                android:drawableBottom="@drawable/selector_search_line"
                android:drawablePadding="@dimen/px6"
                android:gravity="center_horizontal"
                android:text="最新"
                android:textColor="#ffffff"
                android:textSize="@dimen/px22" />
        </RadioGroup>
    </LinearLayout>

    <ListView
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/px10"
        android:layout_weight="1"
        android:divider="#F2F2F2"
        android:dividerHeight="@dimen/px10"
        android:scrollbars="none" />

</LinearLayout>